@Article{Elman.1993,
  author    = {Elman, Jeffrey L.},
  title     = {Learning and development in neural networks: {T}he importance of starting small},
  journal   = {Cognition},
  year      = {1993},
  volume    = {48},
  number    = {1},
  pages     = {71--99},
  abstract  = {Following a proposal by Newport (1990), Elman demonstrates using simple recurrent networks that while un-restricted networks fail to learn representations of complex sentences from un-restricted input, a network is able to learn to process complex sentences in a more restricted situation. When a network receives initially restricted input which incrementally increases in complexity or when the network's working memory capacity is initially restricted and only incrementally increases over time, the network first learns basic grammatical categories needed to represent relations in complex sentences and then learns to process complex sentences. This way, initial constraints of input and processing architecture which incrementally cease over time enable learning of complex behavior. Elman discusses in some detail the properties of connectionist networks which individually constraint learning but in interaction enable learning of complex behavior. Contrary to what is believed in Chomskyan linguistics, networks rely on the representativeness of their input. When input is limited, the network may generate various generalizations or hypotheses represented in the weights of the links between the nodes. "Learning occurs through smooth and small changes in hypotheses." (91) Gradually drifting through an error surface, the network develops the optimal weight configuration, however, might bog down in a local error minimum. Last, the network's ability to learn ceases over time due to the function underlying node response and adjustment to error. Taken together, this is a network "which is highly constraint, and in the outcome of learning may be far from optimal" (94), however, "By starting with an immature and impoverished memory which allows the system to process only simple sentences, the network constructs a scaffolding for later learning. As time progresses, the gradual improvement in memory capacity selects more and more complex sentences for processing" (95). In this perspective, immaturity and development might be advantaguous to networks or children learning complex behavior like language.},
  doi       = {10.1016/0010-0277(93)90058-4},
  file      = {Elman.1993.pdf:Elman.1993.pdf:PDF},
