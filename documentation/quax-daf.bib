@InCollection{Wagner.2015,
  author    = {Johannes Wagner},
  title     = {Designing for Language Learning in the Wild: Creating social infrastructures for second language learning},
  booktitle = {Usage-Based Perspectives on Second Language Learning},
  publisher = {De Gruyter},
  year      = {2015},
  editor    = {Eskildsen, Soren W. and Cadierno, Teresa},
  pages     = {75--101},
  abstract  = {In this introductory chapter, Wagner outlines the usage-based research of second language acquisition based on conversational analysis. Like MacWhinney (this volume), he first introduces the theoretical underpinnings of conversational analysis for second language acquisition and then proposes to rethink second language education. In addition, he uses experiences from three adult second language learners of Danish to illustrate his points. Multiple approaches to language learning emerged from the social turn which relate language learning to the social world of the learner, to their praxis in everyday activities of communities of language users. They ``agree in their understanding of cognition as being socially grounded and realised: Cognition is not understood as information processing but as organizing embodied interactions between social actors in meaningful ecologies and reflexively being shaped by those situated encounters'' (75). Based on the detailed analysis of interactions in the life-world of three second language learners and methodologically informed by ethnomethodology and conversational analysis, Wagner takes the position that ``human action is not a property of language but that language is one resource through which action is done'' (76). What is important is that language use as a social practice is not to be considered as mere encoding and decoding of information by use of an increasingly complex inventory of form-meaning pairings, like the cognitive usage-based approach does. Instead, the conversational analysis approach emphasizes ``that participants make sense of each other and that this sense goes much deeper than `semantic understanding' of what has been said. It involves a richer understanding of what is at stake: learning, competence, knowledge, and identity'' (78). Wagner talks about second language learners not as learners but as ``newcomers'' to emphasize the fact that they arrived in the new society only recently and only because of that have to learn the ways of this new society when interacting with ``locals''. He focuses on experiences of second language learners ``in the wild'', meaning outside of the language classroom. Transcripts of recordings of everyday communicative interactions between ``newcomers'' and ``locals'' are analyzed in a qualitative and open way. This way of analysis recognizes language learners as subjects and agents of their own history and brings out the complexity and multidimensionality of language learning situations. ``Language learning situations are not just there and unproblematic, but the newcomers are flexibly orienting to possibilities to create them or avoiding them in the service of other issues at stake'' (85). Sociality including talk is organized by intersubjectivity, sense-making, and learning which -- again -- are not seen as being related to functions hidden in people's minds but as social practices which may be observed in interaction -- and from which ``newcomers'' may learn the ways of the ``locals''. Therefore, on this view, (second language) learning is seen as a social activity rather than entrenchment of traces of experienced language use in memory. In the last part of the chapter, Wagner proposes ways to build social infrastructures for second language learning (``Social infrastructure is the network of people and environments where newcomers can do their business in the local language, where their co-participants are helpful and tolerant, and graciously allow the extra time. A social infrastructure emerges when the newcomers can start to build longer relations with locals.'', 80), in particular, ways to create opportunities for ``newcomers'' to engage in social interaction with ``locals'' in ``local'' ways including but not limited to using the local language and ways to integrate these experiences learners make ``in the wild'' into the classroom.},
  file      = {Wagner.2015.pdf:Wagner.2015.pdf:PDF},
  owner     = {daniel},
  timestamp = {2020.05.02},
}

@InProceedings{Schmid.2018,
  author    = {Schmid, Hans-J\"{o}rg},
  title     = {Unifying entrenched tokens and schematized types as routinized commonalities of linguistic experience},
  booktitle = {Yearbook of the German Cognitive Linguistics Association},
  year      = {2018},
  volume    = {6},
  number    = {1},
  pages     = {167--182},
  abstract  = {Proponents of usage-based models of language acquisition, language structure and language change widely agree that the repetition of specific tokens of words and strings in language use (e.g. give me a break) is conducive to their entrenchment and has a stabilizing and conserving effect, while the repetition of different instantiations of a variable type or pattern (give me a kiss, give me a smile, give me an amen) fosters schematicity and productivity (give me a(n) X). In this paper, I will argue that token-entrenchment and type-schematization are subserved by the same repetition-driven cognitive mechanism. Commonalities observed in linguistic input and output become routinized by repeated activation of patterns of associations. Token-entrenchment and type-schematization do not differ qualitatively but only quantitatively with regard to the variability of what is noticed as being similar. I argue that any form of routinization requires an abstraction over differences between episodes in terms of pronunciation, cotext and context. Therefore, schematization is an inherent component of routinization, but routinization is clearly the more fundamental cognitive process and learning mechanism. I argue that routinized patterns of associations can do the job of constructions in a more flexible, dynamic and parsimonious way and illustrate the potential of this idea with the help of data and insights gleaned from Schonefeld (2015).

Schmid develops unified model of entrenchment and schematization. According to this model, all entrenchment involves at least some schematization (e.g., differences in pronunciation, cotext, and context are commonly not reinforced) and, as a consequence, he concludes that entrenchment and schematization arise from similar processes of routinization of commonalities. He adopts an associative network model of grammar which routinizes processing patterns to different degrees depending on frequency of occurrence and degree of similarity across usage events. With each usage event, associations between form and meaning (symbolic), form and form (syntagmatic), form and context (pragmatic), and meaning and meaning (paradigmatic) are reinforced and routinized. Highly frequent and invariant patterns become routinized and strongly entrenched, whereas more diverse input lead to routinization of more general commonalities, equivalent to establishing schematic constructions. This approach has advantages: one routinization process instead of two processes, entrenchment and schematization; differently routinized patterns of association instead of proliferation of nodes in constructicon; no extra burden on memory; constructional network is dynamic and sensitive to change; etc. 

This seems highly similar to Langacker (1987, 2010, 2017), Diessel (2018), and my dissertation. Moreover, the conflict between routinization and exemplar-based models (invoked by Schmid) really only arises if one takes exemplar model literally instead of metaphorically.},
  doi       = {10.1515/gcla-2018-0008},
  owner     = {daniel},
  timestamp = {2020.05.02},
  url       = {https://doi.org/10.1515/gcla-2018-0008},
}

